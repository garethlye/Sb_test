<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/slide_bottom_out</item>
        <item name="android:animationDuration">100</item>
    </style>
</resources>
